
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Introdu o noua comanda</title>

     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fromInputToDataase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fromInputToDataase.styles.css" asp-append-version="true" />

    <style>
        body{
           display:flex;
           justify-content:center;
        }

        .formContainer{
            width:50%;
        }

        .labelshow {
            visibility:visible!important;
        }

        .redInputs {
            border:1px solid red!important;
        }

        
    </style>
</head>


<body>
    
    <div class="formContainer">
        <h3>Introdu o noua comanda</h3>

        <br />
        <a  href=~/Home/Index style="text-decoration:none">Inapoi</a>
        <br />

       <form class="mt-3 form" action="~/Order/InsertIntoDB" method="post">
                  <div class="mb-1 inlineDsiplay">
                    <label  class="form-label">Numar Comanda</label>
                    <input name="OrderNumber" type="text" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1 inlineDsiplay">
                    <label  class="form-label">Nume</label>
                    <input name="FirstName" type="text" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label  class="form-label">Sex</label>
                     <select name="LastName" class="form-select">
                      <option value="M">M</option>
                      <option value="F">F</option>
                    </select>
                  </div>

                  <div class="mb-1">
                    <label  class="form-label">Email</label>
                    <input name="Email" type="text" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Adresa</label>
                    <input name="Adress" type="text" class="form-control" placeholder="*" >
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Model Lampa</label>
                    <input name="Lamp" type="text" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Pret</label>
                    <input name="Price" type="text" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Culoare si caracteristici</label>
                    <input name="Color" type="text" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Data Comanda</label>
                    <input name="OrderDate" type="date" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Data Livrare</label>
                    <input name="DeliveryDate" type="date" class="form-control" placeholder="*">
                  </div>

                  <div class="mb-1">
                    <label class="form-label">Canal</label>
                     <select name="Channel" class="form-select">
                      <option value="Website">Website</option>
                      <option value="Instagram">Instagram</option>
                      <option value="Facebook">Facebook</option>
                      <option value="Telefon">Telefon</option>
                      <option value="Targ">Targ</option>
                    </select>
                  </div>

                   <div class="mb-1">
                        <label class="form-label">Judet</label>
                        <select name="Characteristics" class="form-select">
                            <option value="0">Alege Judet</option>
                            <option value="Alba">Alba</option>
                            <option value="Arad">Arad</option>
                            <option value="Arges">Arges</option>
                            <option value="Bacau">Bacau</option>
                            <option value="Bihor">Bihor</option>
                            <option value="Bistrita Nasaud">Bistrita Nasaud</option>
                            <option value="Botosani">Botosani</option>
                            <option value="Brasov">Brasov</option>
                            <option value="Braila">Braila</option>
                            <option value="Bucuresti">Bucuresti</option>
                            <option value="Buzau">Buzau</option>
                            <option value="Caras Severin">Caras Severin</option>
                            <option value="Calarasi">Calarasi</option>
                            <option value="Cluj">Cluj</option>
                            <option value="Constanta">Constanta</option>
                            <option value="Covasna">Covasna</option>
                            <option value="Dambovita">Dambovita</option>
                            <option value="Dolj">Dolj</option>
                            <option value="Galati">Galati</option>
                            <option value="Giurgiu">Giurgiu</option>
                            <option value="Gorj">Gorj</option>
                            <option value="Harghita">Harghita</option>
                            <option value="Hunedoara">Hunedoara</option>
                            <option value="Ialomita">Ialomita</option>
                            <option value="Iasi">Iasi</option>
                            <option value="Ilfov">Ilfov</option>
                            <option value="Maramures">Maramures</option>
                            <option value="Mehedinti">Mehedinti</option>
                            <option value="Mures">Mures</option>
                            <option value="Neamt">Neamt</option>
                            <option value="Olt">Olt</option>
                            <option value="Prahova">Prahova</option>
                            <option value="Satu Mare">Satu Mare</option>
                            <option value="Salaj">Salaj</option>
                            <option value="Sibiu">Sibiu</option>
                            <option value="Suceava">Suceava</option>
                            <option value="Teleorman">Teleorman</option>
                            <option value="Timis">Timis</option>
                            <option value="Tulcea">Tulcea</option>
                            <option value="Vaslui">Vaslui</option>
                            <option value="Valcea">Valcea</option>
                            <option value="Vrancea">Vrancea</option>
                        </select>
                  </div>
                  
     
                  <h6 style="color:red; visibility:hidden" class="form-label label my-3">Toate campurile sunt obligatorii</h6>

                  <button type="submit" class="mt-3 btn btn-success">Introdu in Baza de Date</button>
              
            </form>
        </div>


</body>

<script src="~/js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready( function() { // Wait until document is fully parsed
      $(".form").on('submit', function(e){

          if(!checkInputs())
          {
             e.preventDefault();
          }

      });
    })

    function checkInputs(){

        if($(".form-control").val()=='')
        {
            $(".label").addClass("labelshow");
            $(".form-control").addClass("redInputs");
            return(false);
        }
        else
        {
            $(".label").removeClass("labelshow");
            $(".form-control").removeClass("redInputs");
        }
        return(true);
        
    }


</script>

</html>
